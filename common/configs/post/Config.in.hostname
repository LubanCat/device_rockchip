#

choice
	prompt "hostname"

config RK_ROOTFS_HOSTNAME_DEFAULT
	bool "auto"
	help
	  Use "<chip>-<OS>" for non-debian OS.

config RK_ROOTFS_HOSTNAME_ORIGINAL
	bool "original"

