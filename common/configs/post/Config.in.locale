#

choice
	prompt "locale"

config RK_ROOTFS_LOCALE_DEFAULT
	bool "auto"
	help
	  Use "en_US.UTF-8" for non-debian OS.

config RK_ROOTFS_LOCALE_ORIGINAL
	bool "original"

config RK_ROOTFS_LOCALE_CUSTOM
	bool "custom"

endchoice # locale

if RK_ROOTFS_LOCALE_CUSTOM

config RK_ROOTFS_LOCALE
	string "custom locale"
	default "en_US.UTF-8"

endif
